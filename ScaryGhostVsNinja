<script type="text/javascript">
	
var world = [

	[1,1,1,1,1],
	[1,0,2,2,1],
	[1,2,1,2,1],
	[1,2,3,2,1],
	[1,2,1,0,1],
	[1,0,1,1,1],
	[1,0,2,2,1],
	[1,2,3,2,1],
	[1,2,0,3,1],
	[1,1,1,1,1],

];
var worldDict = {

	0: 'blank',
	1: 'wall',
	2: 'sushi',
	3: 'onigiri'
}

var lives = 3;

function randomNumber(min, max) {  
    return Math.floor(Math.random() * (max - min) + min); 
}  


var tempNum = 0;

function designWorld(){

	for (var i=0; i<world.length; i++){

		for (var j = 0; j < world[i].length; j++) {

			tempNum = randomNumber(1, 4);

			world[i][j] =  tempNum;
		 
		}

	}
}

designWorld()

function drawWorld(){

	output = "";

	for(var row=0; row < world.length; row++){

		output += "<div class = 'row'>"
			for( var x =0; x < world[row].length; x++){
				output += "<div class = '"+worldDict[world[row][x]]+"'></div>"
			}

			output += "</div>"
	}

	document.getElementById('world').innerHTML = 
			output;

}

drawWorld()

var ninjaman = {

	x:1,
	y:1
}

function drawNinjaman(){

	document.getElementById('ninjaman').style.top = ninjaman.x * 40 + 'px'
	document.getElementById('ninjaman').style.left = ninjaman.y * 40 + 'px'

}

var sushiCounter = 0;
var onigiriCounter = 0;
var total=0;

drawNinjaman()

document.onkeydown = function(e){

	if (e.keyCode == 38){
		if (world[ninjaman.x-1][ninjaman.y]!= 1)
		{

		ninjaman.x--;

		}
		if(world[ninjaman.x][ninjaman.y] == 2)
		{

		sushiCounter++;
		total++;

		}else if(world[ninjaman.x][ninjaman.y] == 3)
		{

		total += 10;
		onigiriCounter++;

		}
				
	}

	if (e.keyCode == 40){
		if (world[ninjaman.x+1][ninjaman.y]!= 1)
		{
		ninjaman.x++;
		}
		if(world[ninjaman.x][ninjaman.y] == 2){

		sushiCounter++;
		total++;

		}else
		if(world[ninjaman.x][ninjaman.y] == 3){

		total += 10;
		onigiriCounter++;

		}

		

	}

	if (e.keyCode == 37){
		if (world[ninjaman.x][ninjaman.y-1]!= 1)	
		{
		ninjaman.y--;
		}
		if(world[ninjaman.x][ninjaman.y] == 2){

		sushiCounter++;
		total++;

		}else
		if(world[ninjaman.x][ninjaman.y] == 3){

		total += 10;
		onigiriCounter++;

		}

		
	}

	if (e.keyCode == 39){
		if (world[ninjaman.x][ninjaman.y+1]!= 1)
		{
		ninjaman.y++; 
		}	
		if(world[ninjaman.x][ninjaman.y] == 2){

		sushiCounter++;
		total++;

		}else
		if(world[ninjaman.x][ninjaman.y] == 3){

		total += 10;
		onigiriCounter++;

		}

			
	}

}

var bluey = {

	x:2,
	y:2
}
// THIS RIGHT HERE
function blueylocation(){
	
	document.getElementById('bluey').style.top = bluey.x * 40 + 'px'
	document.getElementById('bluey').style.left = bluey.y * 40 + 'px'

}
//WHY DOESN'T IT WORK  SAME AS LINE 152 AND STYLE CODE IS SAME AS NINJA STYLE CODE

blueylocation()

document.onkeydown = function(e){

	if (e.keyCode >36 && e.keyCode < 41 ){

		if (ninjaman.x > bluey.x)
		{

		bluey.x--;

		}
		if(ninjaman.x < bluey.x)
		{

		bluey.x++;
		

		}else if(ninjaman.y > bluey.y)
		{

		bluey.y--;

		}
		if (ninjaman.y < bluey.y){

			bluey.y++;

		}

		if (world[ninjaman.x][ninjaman.y] = world[bluey.x][bluey.y]){

			lives--;
		}
	}

	world[ninjaman.x][ninjaman.y] = 0;
}



</script>
